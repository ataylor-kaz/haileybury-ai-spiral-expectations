<!-- JavaScript Logic -->
<script>
    // --- Data: HPL Skills ---
    const skillsData = {
        acps: [
            {
                id: 'meta',
                name: 'Meta-Thinking',
                icon: 'üß†',
                hplDef: 'Monitoring, regulating, and planning your own thinking. The "Boss of the Brain".',
                aiApp: 'Knowing WHEN to use AI. Asking: "Should I use ChatGPT for this essay, or will that stop me from learning to write?" It is about strategy, not just execution.'
            },
            {
                id: 'critical',
                name: 'Critical Thinking',
                icon: 'üïµÔ∏è',
                hplDef: 'The ability to analyze complex ideas, arguments, and evidence logically.',
                aiApp: 'Detecting "Hallucinations" and bias. When an AI gives an answer, the critical thinker asks: "Is this true? Who trained this model? Is this video a deepfake?"'
            },
            {
                id: 'linking',
                name: 'Linking',
                icon: 'üîó',
                hplDef: 'Seeing connections between different things and understanding the "big picture".',
                aiApp: 'Understanding Algorithms. Linking your own data (what you click) to the output (what Netflix suggests). Understanding that "Garbage In = Garbage Out".'
            }
        ],
        vaas: [
            {
                id: 'agility',
                name: 'Agility',
                icon: 'ü§∏',
                hplDef: 'Being open-minded, enquiring, and creative. Adapting to new situations.',
                aiApp: 'Prompt Engineering requires agility. If the AI gives a bad answer, the agile learner doesn\'t give up‚Äîthey change the prompt (iteration) and try a new approach.'
            },
            {
                id: 'empathy',
                name: 'Empathy',
                icon: '‚ù§Ô∏è',
                hplDef: 'Being collaborative and concerned for society. Understanding others.',
                aiApp: 'AI Ethics. Asking: "Is this technology fair to everyone?" Understanding that AI has no feelings, so we must supply the humanity.'
            },
            {
                id: 'hardwork',
                name: 'Hard Work',
                icon: '‚öôÔ∏è',
                hplDef: 'Resilience and perseverance. The engine of success.',
                aiApp: 'Learning to code or master a complex tool takes practice. It requires the resilience to debug errors and the patience to train models.'
            }
        ]
    };

    // --- Data: Scenarios ---
    const scenarios = [
        {
            question: "Your child asks: 'Why is the sky blue?' and immediately reaches for the iPad to ask Siri.",
            options: [
                {
                    text: "Let them ask Siri immediately.",
                    feedback: "Not quite. While fast, this skips the thinking process.",
                    isCorrect: false
                },
                {
                    text: "Say: 'What do you think first? Use your brain before the digital brain.'",
                    feedback: "Perfect! This encourages Meta-Thinking. The AI is a tool to check thinking, not replace it.",
                    isCorrect: true
                }
            ]
        },
        {
            question: "You see your child watching a video that looks very strange and unbelievable.",
            options: [
                {
                    text: "Turn it into a game: 'Let's play Detective. How can we check if this is real?'",
                    feedback: "Excellent! This models Critical Thinking and turns skepticism into a habit.",
                    isCorrect: true
                },
                {
                    text: "Tell them to turn it off immediately.",
                    feedback: "This stops the viewing, but misses a teaching moment about deepfakes and misinformation.",
                    isCorrect: false
                }
            ]
        },
        {
            question: "Your child is frustrated because the AI art generator isn't making the picture they want.",
            options: [
                {
                    text: "Do it for them.",
                    feedback: "This solves the problem but prevents learning.",
                    isCorrect: false
                },
                {
                    text: "Encourage Agility: 'Try using different words. How can we say this differently?'",
                    feedback: "Spot on! This teaches iteration and resilience (Hard Work) in prompt engineering.",
                    isCorrect: true
                }
            ]
        }
    ];

    // --- State Management ---
    let currentScenarioIndex = 0;
    let selectedSkillId = null;

    // --- Initialization ---
    document.addEventListener('DOMContentLoaded', () => {
        renderChart();
        renderSkillList();
        // Load first scenario
        renderScenario(0);
        // Select first skill by default
        selectSkill('meta', 'acps');
    });

    // --- Chart Logic ---
    function renderChart() {
        const ctx = document.getElementById('hplRadarChart').getContext('2d');
        new Chart(ctx, {
            type: 'radar',
            data: {
                labels: ['Meta-Thinking', 'Critical Thinking', 'Linking', 'Agility', 'Empathy', 'Hard Work'],
                datasets: [{
                    label: 'HPL Empowered Learner',
                    data: [90, 85, 80, 90, 95, 85],
                    fill: true,
                    backgroundColor: 'rgba(14, 165, 233, 0.2)', // Sky-500
                    borderColor: 'rgba(14, 165, 233, 1)',
                    pointBackgroundColor: 'rgba(14, 165, 233, 1)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgba(14, 165, 233, 1)'
                }, {
                    label: 'Passive User',
                    data: [20, 30, 40, 50, 40, 40],
                    fill: true,
                    backgroundColor: 'rgba(168, 162, 158, 0.2)', // Stone-400
                    borderColor: 'rgba(168, 162, 158, 1)',
                    pointBackgroundColor: 'rgba(168, 162, 158, 1)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgba(168, 162, 158, 1)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                elements: {
                    line: { borderWidth: 3 }
                },
                scales: {
                    r: {
                        angleLines: { display: true },
                        suggestedMin: 0,
                        suggestedMax: 100,
                        ticks: { display: false } // Hide numbers for cleaner look
                    }
                },
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    }

    // --- Skill Explorer Logic ---
    function renderSkillList() {
        const acpContainer = document.getElementById('acpList');
        const vaaContainer = document.getElementById('vaaList');

        // Render ACPs
        skillsData.acps.forEach(skill => {
            acpContainer.appendChild(createSkillButton(skill, 'acps'));
        });

        // Render VAAs
        skillsData.vaas.forEach(skill => {
            vaaContainer.appendChild(createSkillButton(skill, 'vaas'));
        });
    }

    function createSkillButton(skill, type) {
        const btn = document.createElement('button');
        btn.className = `w-full text-left px-4 py-3 rounded-lg text-sm font-medium text-stone-600 hover:bg-stone-100 transition flex items-center group skill-btn-${skill.id}`;
        btn.onclick = () => selectSkill(skill.id, type);
        btn.innerHTML = `
            <span class="mr-3 text-lg group-hover:scale-110 transition-transform">${skill.icon}</span>
            ${skill.name}
        `;
        return btn;
    }

    function selectSkill(id, type) {
        // Remove active classes
        document.querySelectorAll('[class*="skill-btn-"]').forEach(el => {
            el.classList.remove('card-active', 'text-stone-900', 'bg-stone-50');
            el.classList.add('text-stone-600');
        });

        // Add active class to selected
        const activeBtn = document.querySelector(`.skill-btn-${id}`);
        if (activeBtn) {
            activeBtn.classList.add('card-active', 'text-stone-900', 'bg-stone-50');
            activeBtn.classList.remove('text-stone-600');
        }

        // Update Display
        const skill = skillsData[type].find(s => s.id === id);
        const display = document.getElementById('skillDisplay');
        
        // Fade out, update, fade in
        display.classList.remove('fade-in');
        void display.offsetWidth; // trigger reflow
        
        display.innerHTML = `
            <div class="fade-in">
                <div class="flex items-center mb-6">
                    <div class="text-6xl mr-6 bg-stone-50 p-4 rounded-2xl">${skill.icon}</div>
                    <div>
                        <h3 class="text-2xl font-bold text-stone-900">${skill.name}</h3>
                        <span class="inline-block px-3 py-1 bg-stone-100 text-stone-500 text-xs font-bold uppercase tracking-wide rounded-full mt-2">
                            ${type === 'acps' ? 'Thinking Skill' : 'Character Attribute'}
                        </span>
                    </div>
                </div>
                
                <div class="space-y-6">
                    <div>
                        <h4 class="text-sm font-bold text-stone-400 uppercase tracking-wider mb-2">HPL Definition</h4>
                        <p class="text-lg text-stone-800 leading-relaxed">${skill.hplDef}</p>
                    </div>
                    
                    <div class="bg-sky-50 p-6 rounded-xl border border-sky-100">
                        <h4 class="text-sm font-bold text-sky-600 uppercase tracking-wider mb-2">AI Literacy Application</h4>
                        <p class="text-sky-900 leading-relaxed">${skill.aiApp}</p>
                    </div>
                </div>
            </div>
        `;
        display.classList.add('fade-in');
    }

    // --- Scenario Logic ---
    function renderScenario(index) {
        if (index >= scenarios.length) {
            showCompletion();
            return;
        }

        const scenario = scenarios[index];
        const container = document.getElementById('scenarioContainer');
        const progress = document.getElementById('progressBar');
        const counter = document.getElementById('scenarioCount');

        // Update UI
        progress.style.width = `${((index) / scenarios.length) * 100}%`;
        counter.innerText = `Scenario ${index + 1} of ${scenarios.length}`;

        container.innerHTML = `
            <h3 class="text-xl font-bold text-stone-900 mb-6">${scenario.question}</h3>
            <div class="space-y-4">
                ${scenario.options.map((opt, i) => `
                    <button onclick="checkAnswer(${index}, ${i})" class="w-full text-left p-4 rounded-xl border-2 border-stone-100 hover:border-stone-300 hover:bg-stone-50 transition group">
                        <div class="flex items-center">
                            <span class="w-8 h-8 rounded-full bg-stone-100 text-stone-500 flex items-center justify-center mr-4 group-hover:bg-stone-200 font-bold">${String.fromCharCode(65 + i)}</span>
                            <span class="text-stone-700 font-medium">${opt.text}</span>
                        </div>
                    </button>
                `).join('')}
            </div>
        `;
    }

    function checkAnswer(scenarioIndex, optionIndex) {
        const scenario = scenarios[scenarioIndex];
        const option = scenario.options[optionIndex];
        const container = document.getElementById('scenarioContainer');

        const resultColor = option.isCorrect ? 'bg-green-50 border-green-200 text-green-900' : 'bg-amber-50 border-amber-200 text-amber-900';
        const icon = option.isCorrect ? '‚úÖ' : 'ü§î';

        container.innerHTML = `
            <div class="text-center py-8 fade-in">
                <div class="text-6xl mb-4">${icon}</div>
                <div class="p-6 rounded-xl border ${resultColor} mb-8">
                    <p class="font-bold text-lg mb-2">${option.isCorrect ? 'Great Choice!' : 'Consider this...'}</p>
                    <p>${option.feedback}</p>
                </div>
                <button onclick="renderScenario(${scenarioIndex + 1})" class="btn-primary px-8 py-3 rounded-full font-bold shadow-lg">
                    ${scenarioIndex + 1 < scenarios.length ? 'Next Scenario ‚ûù' : 'Finish Simulator ‚ûù'}
                </button>
            </div>
        `;
        
        // Update progress bar to completion for this step
        document.getElementById('progressBar').style.width = `${((scenarioIndex + 1) / scenarios.length) * 100}%`;
    }

    function showCompletion() {
        const container = document.getElementById('scenarioContainer');
        container.innerHTML = `
            <div class="text-center py-8 fade-in">
                <div class="text-6xl mb-4">üèÜ</div>
                <h3 class="text-2xl font-bold text-stone-900 mb-4">Toolkit Complete!</h3>
                <p class="text-stone-600 mb-8">You are ready to support your child's AI journey. Remember, the goal isn't to be a tech expert, but to be a guide for their thinking.</p>
                <div class="grid grid-cols-3 gap-4 max-w-sm mx-auto mb-8 text-center text-sm text-stone-500">
                    <div class="p-4 bg-stone-50 rounded-lg">Model<br>Thinking</div>
                    <div class="p-4 bg-stone-50 rounded-lg">Check<br>Facts</div>
                    <div class="p-4 bg-stone-50 rounded-lg">Show<br>Empathy</div>
                </div>
            </div>
        `;
    }

    function resetScenarios() {
        currentScenarioIndex = 0;
        renderScenario(0);
    }

</script>
